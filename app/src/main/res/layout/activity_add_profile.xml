<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taitran.hearthopehelp.add_profile"
    android:orientation="vertical"
    android:background="@drawable/hhh_background_blackred"
    android:weightSum="10">

    <!--fill details for new profile-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="8"
        android:fillViewport="true"
        android:isScrollContainer="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/aPicButton"
                android:layout_width="260dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/add_pic" />

            <EditText
                android:id="@+id/aNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_border"
                android:hint="Name"
                android:padding="6dp"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/aAgeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="8dp"
                android:padding="6dp"
                android:background="@drawable/edit_text_border"
                android:hint="Age..."
                android:inputType="number"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/aHometownEditText"
                android:layout_width="match_parent"
                android:padding="6dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_border"
                android:hint="Hometown..."
                android:inputType="text"
                android:maxLines="1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/aWhereToFindEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="8dp"
                android:padding="6dp"
                android:inputType="text"
                android:maxLines="1"
                android:background="@drawable/edit_text_border"
                android:hint="Where usually can be found..."
                android:textSize="20sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/aStoryEditText"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="8dp"
                android:padding="6dp"
                android:gravity="left|top"
                android:background="@drawable/edit_text_border"
                android:hint="Story of the individual"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="20dp"
        android:orientation="vertical">


        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/aConsentCheckBox"
            android:layout_gravity="left|center"
            android:layout_weight="2"
            android:text="By checking this, you agree with HeartHopeHelp policy.
Click here to read more about our policy"
            android:textSize="13sp"
            android:textStyle="bold|italic"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/aCancelButton"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginBottom="5dp"
            android:text="Cancel"
            android:textSize="15sp"
            android:background="@drawable/button_border"
            android:textStyle="bold"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:id="@+id/aSubmitButton"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginBottom="5dp"
            android:text="Submit"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </LinearLayout>


</LinearLayout>