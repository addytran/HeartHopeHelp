<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/edit_text_border">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:src="@drawable/profile_pc"/>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:padding="3dp"
        android:orientation="vertical"
        android:weightSum="12">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/infoNameDisplay"
            android:layout_weight="3"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Name: N/A"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/infoHometownDisplay"
            android:layout_weight="3"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Hometown: N/A"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/infoCommonlyFoundDisplay"
            android:layout_weight="3"
            android:textSize="12sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="Commonly Found: N/A"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:text="Touch to see more detail!!"
            android:textSize="12sp"

            android:textStyle="bold|italic"
            android:textColor="@color/com_facebook_blue"/>
    </LinearLayout>

</LinearLayout>